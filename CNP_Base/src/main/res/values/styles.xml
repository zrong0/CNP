<resources>

    <!-- 全局actionbar标题样式设置 -->
    <style name="Widget.Edu.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <!-- 11版本以下的actionbar样式 -->
    <style name="Widget.Edu.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/Widget.Edu.ActionBar.Title</item>
        <item name="android:backgroundSplit">#000000</item>
        <item name="android:backgroundStacked">#ffffff</item>
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:actionMenuTextAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Tab选项标签的样式 -->
    <style name="MyActionBarTabStyle" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_bg2</item>
    </style>

    <!-- Tab选项标签字体的样式 -->
    <style name="MyActionBarTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <style name="layout_actionbar_title_text">
        <item name="android:textColor">@color/actionbar_title_text</item>
        <item name="android:textSize">@dimen/layout_actionbar_title_text_size</item>
    </style>
    <style name="layout_actionbar_title_back">
        <item name="android:layout_marginLeft">@dimen/layout_actionbar_title_back_marginLeft</item>
    </style>

    <style name="cnp_school_layout">
        <item name="android:layout_marginLeft">@dimen/cnp_school_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/cnp_school_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/cnp_school_layout_margin</item>
    </style>

    <style name="demo1">
        <item name="android:layout_alignParentRight">true</item>
    </style>


   <!-- 基本字体样式-->
    <style name="base_tv">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
    </style>

    <!--大字体样式-->
    <style name="large_tv" parent="base_tv">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--普通字体样式-->
    <style name="medium_tv" parent="base_tv">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!--小字体样式-->
    <style name="small_tv_1" parent="base_tv">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--灰色小字体样式-->
    <style name="small_tv" parent="base_tv">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="small_tv_2" parent="base_tv">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#474747</item>
    </style>

    <!--容器视图样式-->
    <style name="container_view">
        <item name="android:layout_margin">@dimen/container_margin</item>
        <item name="android:padding">@dimen/container_margin</item>
    </style>


    <!--头像样式-->
    <style name="face_iv">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:src">@drawable/cnp_spinner_inner</item>
    </style>

    <style name="FaceIv">
        <item name="android:layout_width">76.5dp</item>
        <item name="android:layout_height">76.5dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/shape_sendword_line</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>
    <style name="schoolindex_itemlayout">
        <item name="android:layout_height">@dimen/cnp_schoolindex_item_height</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="schoolindex_text">
        <item name="android:textColor">@color/schoolindex_textcolor</item>
        <item name="android:textSize">@dimen/schoolindex_text_size</item>
        <item name="android:layout_marginBottom">@dimen/schoolindex_text_marginBottom</item>
    </style>

    <style name="schoolindex_image_size">
        <item name="android:layout_width">@dimen/schoolindex_image_size_w_h</item>
        <item name="android:layout_height">@dimen/schoolindex_image_size_w_h</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/dialog_bg</item>

    </style>
</resources>
