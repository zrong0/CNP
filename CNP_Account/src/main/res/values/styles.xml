<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="EditText">
            <item name="android:layout_height">@dimen/user_login_et_height</item>
               <item name="android:layout_width">match_parent</item>
               <item name="android:background">@drawable/et_bg</item>
                <item name="android:textColor">@android:color/black</item>
               <item name="android:paddingLeft">@dimen/user_login_et_paddleft</item>
                <item name="android:singleLine">true</item>
                <item name="android:textCursorDrawable" tools:ignore="NewApi">@drawable/text_cursor_holo_light</item>
           </style>

    <style name="EditText_small">
        <item name="android:layout_height">@dimen/user_login_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@drawable/text_cursor_holo_light</item>
    </style>

        <style name="Button">
            <item name="android:textColor">@color/btn_text</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">@dimen/user_login_btn_height</item>
            <item name="android:background">@drawable/btn_bg</item>
            <item name="android:layout_marginTop">@dimen/user_login_btn_margintop</item>
            <item name="android:layout_gravity">center_horizontal</item>
        </style>

    <style name="Button_small">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">@dimen/user_login_btn_height</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_marginTop">@dimen/user_login_btn_margintop</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>



    <style name="TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="indexIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/android_list_idex</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FaceBigIv">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/et_bg</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/container_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ListView">
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/lv_divider</item>
        <item name="android:dividerHeight">@dimen/lv_driver_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
